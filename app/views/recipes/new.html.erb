<h1>Add a new recipe<h1/>
<%= form_for(@recipe) do |f| %>
  <div class="field">
    <%= f.label :title %><br />
    <%= f.text_field :title %>
  </div>
  <div class="field">
    <%= f.label :source %><br />
    <%= f.text_field :source%>
  </div>

  <div class="field">
    <%= f.label :description %><br />
    <%= f.text_field :description%>
  </div>
  <div class="field">
    <%= f.label :servings_made, "Makes:" %><br />
    <%= f.text_field :servings_made%>
  </div>
  <div class="field">
    <%= f.label :body %><br />
    <%= f.text_area :body%>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
