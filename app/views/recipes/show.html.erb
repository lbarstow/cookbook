<div class = "recipe-pane columns small-7">
  <h4><%=@recipe.title%></h4>
  <% if @recipe.source.present? %>
   <p>Source: <%=@recipe.source%></p>
  <%end%>
  <% if @recipe.description.present? %>
   <p class="description"><%=@recipe.description%></p>
  <%end%>
  <p><%=simple_format(@recipe.body)%></p>
</div>
